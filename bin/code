#!/bin/bash

opts=""

if   [[ "$OSTYPE" == "cygwin" ]] || [[ "$OSTYPE" == "msys" ]]
then
    OLDIFS=$IFS
    IFS=':'
    SEARCH_LIST="/cygdrive/d/Programs/Microsoft VS Code/Code.exe":"/cygdrive/c/Program Files (x86)/Microsoft VS Code/Code.exe"
    CODE_EXE=""
    for c in $SEARCH_LIST; do
        echo "Testing: $c"
        if [[ -f $c ]]; then
            CODE_EXE="$c"
            break
        fi
    done

    IFS=$OLDIFS

    if [[ -z $CODE_EXE ]]; then
        echo "Code.exe not found; please correct SEARCH_LIST"
        exit 1
    fi
elif [[ "$OSTYPE" == darwin* ]]
then
    echo "TODO: implement for MACOS"
    exit 1
else
    echo "unknown OSTYPE $OSTYPE"
    exit 1
fi


if [[ -z "$@" ]]
then
    eval \"$CODE_EXE\" &
else
    IFS='#'
    params=""

    for i in $@; do
        if   [[ $i == -* ]]
        then
            opts="$opts $i" 
        else
            if   [[ "$OSTYPE" == "cygwin" ]]
            then
                file="`cygpath -w \"$i\"`" 
            elif [[ "$OSTYPE" == "msys" ]]
            then
                file="`echo $i | sed -re 's/^\/([a-z])\//\1:\//g'`" 
            else
                file=$i
            fi
            params="$params \"$file\""
        fi
    done

    eval \"$CODE_EXE\" $opts $params &
fi
