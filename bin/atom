#!/bin/bash

#export TEMP=C:\\temp
#export TMP=C:\\temp

#PREVIFS=$IFS
#IFS='#'

params=""
for i in $@; do
    rp=`realpath $i`
    file="`cygpath -w \"$rp\"`" 
    params="$params \"\"\"$file\"\"\""
done
IFS=$PREVIFS

cmd.exe /c "start \"\"\"WindowTitle\"\"\" \"\"\"c:\\Program Files\\Atom\\atom.exe\"\"\" $params"

